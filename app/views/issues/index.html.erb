<%= link_to '+ Submit a New Issue', new_issue_path %>

<% @issues.each do |issue| %>
<div class="issue"
  <div class = "info">
    <h1><%= link_to issue.name, issue_path(issue) %></h1>
    <%= issue.description.slice(0,100) %>...
  </div>
  <div class = "showcaseimg">
      <%= image_tag (issue.images)  %>
  </div>
</div>
<% end %>
